{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "datasource",
  "name": "LogicMonitor",
  "executable": "logicmonitor-plugin",
  "id": "logicmonitor-datasource",
  "metrics": true,
  "backend": true,
  "routes": [
    {
      "path": "device/devices",
      "url": "https://{{ .JsonData.path }}.logicmonitor.com/santaba/rest/device/devices",
      "headers": [
        {
          "name": "Authorization",
          "content": "Bearer {{ .SecureJsonData.bearer_token }}"
        }
      ]
    },
    {
      "path": "device/groups",
      "url": "https://{{ .JsonData.path }}.logicmonitor.com/santaba/rest/device/groups/",
      "headers": [
        {
          "name": "Authorization",
          "content": "Bearer {{ .SecureJsonData.bearer_token }}"
        }
      ]
    },
    {
      "path": "autocomplete/names",
      "url": "https://{{ .JsonData.path }}.logicmonitor.com/santaba/rest/autocomplete/names",
      "headers": [
        {
          "name": "Authorization",
          "content": "Bearer {{ .SecureJsonData.bearer_token }}"
        },
        {
          "name": "x-version",
          "content": "3"
        }
      ]
    },
    {
      "path": "setting/datasources",
      "url": "https://{{ .JsonData.path }}.logicmonitor.com/santaba/rest/setting/datasources",
      "headers": [
        {
          "name": "Authorization",
          "content": "Bearer {{ .SecureJsonData.bearer_token }}"
        }
      ]
    }
  ],
  "info": {
    "description": "LogicMonitor plugin for Grafana",
    "author": {
      "name": "https://www.logicmonitor.com",
      "url": "http://www.logicmonitor.com"
    },
    "keywords": [
      "logicmonitor"
    ],
    "logos": {
      "small": "img/small_logo.png",
      "large": "img/LM_Logo.png"
    },
    "links": [
      {
        "name": "Website",
        "url": "https://www.logicmonitor.com"
      },
      {
        "name": "GitHub",
        "url": "https://github.com/grafana/grafana-starter-datasource-backend"
      },
      {
        "name": "Docs",
        "url": "https://github.com/grafana/grafana-starter-datasource-backend/blob/main/README.md"
      },
      {
        "name": "License",
        "url": "https://github.com/grafana/grafana-starter-datasource-backend/blob/master/LICENSE"
      }
    ],
    "screenshots": [
      {
        "name": "Settings",
        "path": "screenshots/Settings.png"
      },
      {
        "name": "Query",
        "path": "screenshots/QueryWithGraph.png"
      },
      {
        "name": "Dashboard-1",
        "path": "screenshots/Dashboard1.png"
      }
    ],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "dependencies": {
    "grafanaDependency": ">=7.0.0",
    "plugins": []
  }
}